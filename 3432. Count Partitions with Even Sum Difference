class Solution {
public:

    // TC = O(n)
    // SC = O(1)

    int countPartitions(vector<int>& nums) {
        int n = nums.size();
        int totalSum = 0;
        int leftSum = 0;
        int rightSum;
        int ans = 0;

        for (int i = 0; i < n; i++) {
            totalSum += nums[i];
        }

        for (int i = 0; i < n - 1; i++) {
            leftSum += nums[i];
            rightSum = totalSum - leftSum;
            if (abs(leftSum - rightSum) % 2 == 0) {
                ans++;
            }
        }

        return ans;
    }
};
